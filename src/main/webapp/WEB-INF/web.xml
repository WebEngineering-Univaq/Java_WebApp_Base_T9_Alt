<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- servlet, servlet-mapping and init-param can be moved to servlet annotation for better readability -->
    <!--  servlet, servlet-mapping e init-param possono essere specificati con annotazioni sulle servlet per maggiore leggibilitÃ  -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- here we can specify (if we need to!) the default path for the context -->
    <!-- qui possiamo specificare (se necessario!) il path di default del contesto -->
    <welcome-file-list>
        <welcome-file>another/servletpath</welcome-file>
    </welcome-file-list>
</web-app>
